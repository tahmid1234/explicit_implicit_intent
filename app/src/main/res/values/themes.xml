<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Assignment_02" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Black background for all activities -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:buttonStyle">@style/NetflixButton</item>
    </style>

    <!-- Define Netflix-style button -->
    <style name="NetflixButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/netflix_red</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>